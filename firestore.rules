rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    match /users/{userId} {
      // Only the authenticated owner of the document can read or write to it.
      // A new user can create their own profile document.
      allow read, update, delete: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
    }

    match /subjects/{subjectId} {
      // A user can read, create, update, or delete a subject if the document's
      // userId matches their own auth uid.
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /sessions/{sessionId} {
      // A user can read or create a session if the document's userId matches their uid.
      allow read, create: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Sessions are immutable to maintain data integrity.
      allow update, delete: if false;
    }
  }
}
